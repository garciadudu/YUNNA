@model TrailorIT.Site.Models.Usuario
@{
    ViewData["Title"] = "Index";
}

<h2>Cadastro</h2>

<form asp-action="Index">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="row">
        <div class="col-lg-3">
            Nome
        </div>
        <div class="col-lg-9">
            <input type="text" asp-for="Nome" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            Data de Nascimento
        </div>
        <div class="col-lg-9">
            <input type="date" asp-for="DataNascimento" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            E-mail
        </div>
        <div class="col-lg-9">
            <input type="email" asp-for="Email" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            Sexo
        </div>
        <div class="col-lg-9">
            <select asp-for="SexoId"
                    class="form-control"
                    asp-items="@(new SelectList(ViewBag.ListaSexos, "SexoId", "Descricao"))"></select>

        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            Senha
        </div>
        <div class="col-lg-9">
            <input type="password" asp-for="Senha" class="form-control" />
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Salvar</button>
</form>